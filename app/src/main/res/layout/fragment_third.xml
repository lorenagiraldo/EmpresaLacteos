<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lorena.empresalacteos.ThirdFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATOS CARTERA CLIENTE"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/text1" />

    <TextView
        android:text="Documento del cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/text1"
        android:layout_marginTop="51dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editDocumentoCartera"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editNombreCartera"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/editNombreCartera"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:id="@+id/editDireccionCartera" />

    <TextView
        android:text="Telefono del Cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/editDireccionCartera"
        android:layout_alignEnd="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTelefonoCartera"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/editTelefonoCartera"
        android:layout_alignStart="@+id/editTelefonoCartera"
        android:layout_marginTop="32dp"
        android:id="@+id/editSaldoCartera"
        android:inputType="number" />

    <TextView
        android:text="Direccion del cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/editDireccionCartera"
        android:layout_alignBottom="@+id/editDireccionCartera"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:text="Nombre del cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/editDocumentoCartera"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:text="Saldo en Cartera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/editSaldoCartera"
        android:layout_alignBottom="@+id/editSaldoCartera"
        android:layout_alignEnd="@+id/textView8" />

</RelativeLayout>
